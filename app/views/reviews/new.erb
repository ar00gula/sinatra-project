<h1><%= @book.title %></h1>
<h2><%= @book.author %></h2><br>

<form action="/account/reviews" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
<input type="hidden" name="review[user_id]" value="<%=session[:user_id]%>">
<input type="hidden" name="review[book_id]" value="<%=@book.id%>">


<textarea class="review" name="review[content]" rows="6" cols="60" placeholder="Write your review here! Formatting must be in HTML, sorry :("></textarea>

<br>
<div>Star Rating:</div>
<input type="hidden" name="star_rating[user_id]" value="<%=session[:user_id]%>">
<input type="hidden" name="star_rating[book_id]" value="<%=@book.id%>">
<div class="rating-box">
    <div class="rating">
        <input id="star5" name="star_rating[rating]" type="radio" value="5" class="radio-btn hide" />
        <label for="star5">☆</label>
        <input id="star4" name="star_rating[rating]" type="radio" value="4" class="radio-btn hide" />
        <label for="star4">☆</label>
        <input id="star3" name="star_rating[rating]" type="radio" value="3" class="radio-btn hide" />
        <label for="star3">☆</label>
        <input id="star2" name="star_rating[rating]" type="radio" value="2" class="radio-btn hide" />
        <label for="star2">☆</label>
        <input id="star1" name="star_rating[rating]" type="radio" value="1" class="radio-btn hide" />
        <label for="star1">☆</label>
        <div class="clear"></div>
    </div>
</div><br>
<div>Jam Rating:</div>
<input type="hidden" name="heart_rating[user_id]" value="<%=session[:user_id]%>">
<input type="hidden" name="heart_rating[book_id]" value="<%=@book.id%>">
<div class="rating-box">
    <div class="rating-heart">
        <input id="heart5" name="heart_rating[rating]" type="radio" value="5" class="radio-btn hide" />
        <label for="heart5">♡</label>
        <input id="heart4" name="heart_rating[rating]" type="radio" value="4" class="radio-btn hide" />
        <label for="heart4">♡</label>
        <input id="heart3" name="heart_rating[rating]" type="radio" value="3" class="radio-btn hide" />
        <label for="heart3">♡</label>
        <input id="heart2" name="heart_rating[rating]" type="radio" value="2" class="radio-btn hide" />
        <label for="heart2">♡</label>
        <input id="heart1" name="heart_rating[rating]" type="radio" value="1" class="radio-btn hide" />
        <label for="heart1">♡</label>
        <div class="clear"></div>
    </div>
</div>
<br>
<input type="submit" value="Submit Review">
</form>